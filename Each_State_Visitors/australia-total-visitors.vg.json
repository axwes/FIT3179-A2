{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "rgba(0, 0, 0, 0)",
  "width": 900,
  "height": 600,
  "config": {
    "view": {
      "stroke": null
    }
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 1991,
        "max": 2023,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],
  "projection": {
    "type": "equirectangular"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/axwes/FIT3179-A2/main/Each_State_Visitors/australia_map.json",
        "format": {"type": "topojson", "feature": "STE_2021_AUST_GDA2020"}
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.STE_NAME21",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#f0f0f0",
        "stroke": "#d9d9d9",
        "strokeWidth": 1
      },
      "encoding": {
        "tooltip": {"field": "note"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/axwes/FIT3179-A2/refs/heads/main/Each_State_Visitors/visitor_all_states.csv"
      },
      "transform": [
        {
          "lookup": "States",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/axwes/FIT3179-A2/main/Each_State_Visitors/australia_map.json",
              "format": {
                "type": "topojson",
                "feature": "STE_2021_AUST_GDA2020"
              }
            },
            "key": "properties.STE_NAME21"
          },
          "as": "geo"
        },
        {
          "filter": "datum.Year == Year_selection"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "#fff",
        "strokeWidth": 0.5
      },
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "Visitors per Capita",
          "type": "quantitative",
          "scale": {"scheme": "blues"},
          "legend": {"format": ".2f","offset": 10}
        },
        "tooltip": [
          {"field": "States", "type": "nominal", "title": "State"},
          {
            "field": "Visitors per Capita",
            "type": "quantitative",
            "title": "Visitors per Capita",
            "format": ".4f"
          },
          {"field": "Year", "type": "quantitative", "title": "Year"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/axwes/FIT3179-A2/refs/heads/main/Each_State_Visitors/highest_state_visitors.csv"
      },
      "transform": [
        {"filter": "datum.Year == Year_selection"},
        {
          "calculate": "'Highest:' + datum.States + ': ' + datum['Visitors']",
          "as": "highest_visited_text"
        }
      ],
      "mark": {"type": "text", "dx": 5, "dy": -10, "fontStyle": "italic", "fontSize": 14},
      "encoding": {
        "longitude": {"field": "Logitude"}, 
        "latitude": {"field": "Latitude"},
        "text": {"field": "highest_visited_text"},
        "color": {"value": "black"}
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/axwes/FIT3179-A2/refs/heads/main/Each_State_Visitors/lowest_state_visitors.csv"
      },
      "transform": [
        {"filter": "datum.Year == Year_selection"},
        {
          "calculate": "'Lowest:' + datum.States + ': ' + datum['Total Visitors']",
          "as": "lowest_visited_text"
        }
      ],
      "mark": {"type": "text", "dx": 5, "dy": -10, "fontStyle": "italic", "fontSize": 14},
      "encoding": {
        "longitude": {"field": "Longitude"},
        "latitude": {"field": "Latitude"},
        "text": {"field": "lowest_visited_text"},
        "color": {"value": "black"}
      }
    }
  ]
}


